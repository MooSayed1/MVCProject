@model IEnumerable<DepartmentDto>

@{
    ViewData["Title"] = "Index";
}

<a asp-controller="Departments" asp-action="Create" class="btn btn-primary">
    <i class="fas fa-plus"></i> Create New Department</a>

@if (Model.Any())
{
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>@Html.DisplayNameFor(d => d.Id)</th>
            <th>@Html.DisplayNameFor(d => d.Name)</th>
            <th>@Html.DisplayNameFor(d => d.CreateAt)</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.Id</td>
                <td>@department.Name</td>
                <td>@department.CreateAt</td>
                <td>
                    <a asp-action="Details" asp-route-id="@department.Id" class="btn btn-warning">
                        <i class="fas fa-eye"></i> Details
                    </a>
                </td>
                <td>
                    <a asp-action="Update" asp-route-id="@department.Id" class="btn btn-success">
                        <i class="fas fa-edit"></i> Update
                    </a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@department.Id" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">No departments found.</div>
}